# 3d Lennard-Jones melt using lj/cut/gpu

units		lj
atom_style	atomic
newton      off
lattice		fcc 0.8442
region		box block 0 ${len} 0 ${len} 0 ${len}
create_box	1 box
create_atoms	1 box
mass		1 1.0

velocity	all create 1.44 87287 loop geom

pair_style	lj/cut/gpu 2.5
pair_coeff	1 1 1.0 1.0 2.5

neighbor	0.2 bin
neigh_modify	delay 0 every 20 check no

fix             0 all gpu force/neigh 0 1 1.0

fix		1 all nve

timestep	0.003
thermo_style	custom step pe temp evdwl spcpu
thermo		500
run		10000
